@model UTTUniversity.Models.tblMuonTra

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminThuVien/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div class="modal-content">
        <div class="modal-header" style="background-color: dodgerblue">
            <h5 class="modal-title" id="exampleModalLongTitle">Mượn sách</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        @using (Html.BeginForm("Create", "MuonDoc", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body table-border-style">


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Mã đọc giả: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.MA_DOCGIA, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MA_DOCGIA, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Mã Sách: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.MA_SACH, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MA_SACH, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Số lượng: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.SO_LUONG, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SO_LUONG, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Ngày mượn: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.NGAY_MUON, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                        @Html.ValidationMessageFor(model => model.NGAY_MUON, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Ngày trả: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.NGAY_TRA, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                        @Html.ValidationMessageFor(model => model.NGAY_TRA, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Tình trạng: <span class="label-required">*</span></label>
                                        <div class="radio-list" style="padding-left:10px;">
                                            <label class="custom-control custom-radio">
                                                <input type="radio" id="customRadio1" name="customRadio" checked="checked" class="custom-control-input" value="Đang mượn">
                                                <label class="custom-control-label" for="customRadio1">Đang mượn</label>
                                            </label>
                                           
                                            <label class="custom-control custom-radio">
                                                <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input" value="Đặt trước">
                                                <label class="custom-control-label" for="customRadio3">Đặt trước</label>
                                            </label>
                                            @*<label class="custom-control custom-radio">
                                                    <input type="radio" id="customRadio4" name="customRadio" class="custom-control-input" value="Quá hạn">
                                                    <label class="custom-control-label" for="customRadio4">Quá hạn</label>
                                                </label>*@
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="submit" value="Ghi dữ liệu" class="btn btn-primary btn-sm" />
                                    @Html.ActionLink("Quay lại", "Index")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>