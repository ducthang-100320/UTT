@model ThuVienTruongHoc.Areas.Admin.Models.tblTheLoaiSach

@{
    ViewBag.Title = "Danh mục thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thêm Mới Danh Mục Thể Loại</title>
</head>
<body>
    <div class="modal-content">
        <div class="modal-header" style="background-color: dodgerblue">
            <h5 class="modal-title" id="exampleModalLongTitle">Tạo Mới</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Create", "TheLoaiSach", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Tên nhà xuất bản: <span class="label-required">*</span></label>
                            @Html.EditorFor(model => model.MA_THELOAI, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MA_THELOAI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Mã nhà xuất bản: <span class="label-required">*</span></label>
                            @Html.EditorFor(model => model.TEN_THELOAI, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TEN_THELOAI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                   
                    <div class="col-lg-12">
                        <div class="form-group" style="margin-top: .5rem;">
                            <br />
                            <input type="submit" value="Create" class="btn btn-dropbox" />
                            @Html.ActionLink("Quay lại", "Index")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>