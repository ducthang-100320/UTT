@model IEnumerable<UTTUniversity.Models.tblTacGia>

@{
    ViewBag.Title = "Danh mục tác giả";
    Layout = "~/Areas/AdminThuVien/Views/Shared/_Layout.cshtml";
}

@{
    int STT = 0;

}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header" style="background-color:dodgerblue">
                <div class="row">
                    <div class="col-lg-6">
                        <h5 style="color:black">Danh sách thông tin Tin Tức</h5>
                    </div>
                    <div class="col-lg-6">
                        <a href="@Url.Action("Create", "TacGia")" style="float:left" class="btn btn-sm btn-primary btn-header">Thêm mới</a>
                    </div>
                </div>
            </div>
            <div class="card-body table-border-style" style="background-color:#8df9ea">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>Ảnh</th>
                                <th>Mã tác giả</th>
                                <th>Tên tác Giả</th>
                                <th>Giới tính</th>
                                <th>Ngày sinh</th>
                                <th>Tùy Chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                STT = STT + 1;
                                <tr>
                                    <td>
                                        @STT
                                    </td>
                                    <td>
                                        <img src=@item.IMAGE . class="img-radius mb-1" style="height: 50px; width:50px; border-radius:50%" />

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MA_TACGIA)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TEN_TACGIA)
                                    </td>
                                    <td>
                                        @if (item.GIOI_TINH == 1)
                                        {
                                            <span>Nam</span>
                                        }
                                        else
                                        {
                                            <span>Nữ</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NGAY_SINH)
                                    </td>
                                    <td>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <a class="btn btn-outline-info" style="float:right" href="@Url.Action("Edit", "TacGia", new { id = item.ID})">Edit</a>
                                            </div>
                                            <div class="col-md-4">
                                                <a class="btn btn-outline-info" style="float:right" href="#" onclick="CreateModal('@Url.Action("Details", "TacGia" , new {id = item.ID })')">Details</a>
                                            </div>
                                            <div class="col-md-4">
                                                <a class="btn btn-outline-info" style="float:right" href="@Url.Action("Delete", "TacGia",new { id = item.ID })">Delete</a>
                                                @*@Html.ActionLink("Delete", "Delete", new { id = item.RoleID })*@
                                            </div>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    <div class="modal fade" id="myModal2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                        <div class="modal-dialog">
                            <div class="modal-content" id="modelContent2">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function CreateModal(url) {
        $('#modelContent2').load(url);
        $('#myModal2').modal('show');
    }

</script>
