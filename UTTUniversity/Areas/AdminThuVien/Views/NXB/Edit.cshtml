@model UTTUniversity.Models.tblNhaXuatBan

@{
    ViewBag.Title = "Chỉnh sửa thông tin nhà xuất bản";
    Layout = "~/Areas/AdminThuVien/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div class="modal-content">
        <div class="modal-header" style="background-color: dodgerblue">
            <h5 class="modal-title" id="exampleModalLongTitle">Tạo Mới</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Edit", "NXB", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Tên nhà xuất bản: <span class="label-required">*</span></label>
                            @Html.EditorFor(model => model.TEN_NXB, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TEN_NXB, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Mã nhà xuất bản: <span class="label-required">*</span></label>
                            @Html.EditorFor(model => model.MA_NXB, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MA_NXB, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Số điện thoại: <span class="label-required">*</span></label>
                            @Html.EditorFor(model => model.SO_DTHOAI, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SO_DTHOAI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Địa chỉ: <span class="label-required">*</span></label>
                            @Html.EditorFor(model => model.DIA_CHI, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DIA_CHI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label>Mô tả: <span class="label-required">*</span></label> <br />
                        @Html.TextAreaFor(model => model.GHI_CHU, new { cols = 68, rows = 4 })
                        @Html.ValidationMessageFor(model => model.GHI_CHU, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-lg-12">
                        <div class="form-group" style="margin-top: .5rem;">
                            <br />
                            <input type="submit" value="Thay đổi" class="btn btn-dropbox" />
                            @Html.ActionLink("Quay lại", "Index")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
