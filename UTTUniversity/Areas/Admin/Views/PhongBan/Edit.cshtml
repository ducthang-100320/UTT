@model UTTUniversity.Models.tblPhongBan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "PhongBan", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h5>Thêm Mới Phòng Ban</h5>
        </div>
        <div class="card-body table-border-style">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Mã Phòng Ban: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.MA_PHONGBAN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MA_PHONGBAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Tên Phòng Ban: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.TEN_PHONGBAN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TEN_PHONGBAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Số Điện Thoại: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.SO_DTHOAI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SO_DTHOAI, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Địa Chỉ: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.DIA_CHI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIA_CHI, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Mô tả: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.DIA_CHI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIA_CHI, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group" style="margin-top: .5rem;">
                        <br />
                        <input type="submit" value="Ghi dữ liệu" class="btn btn-primary" />
                        @Html.ActionLink("Quay lại", "Index")
                    </div>
                </div>
            </div>

        </div>
    </div>
}

