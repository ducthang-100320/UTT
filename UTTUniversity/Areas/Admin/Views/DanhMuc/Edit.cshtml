@model UTTUniversity.Models.tblCategory


@{
    var lstCate = (List<UTTUniversity.Models.tblCategory>)ViewBag.Role;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Chỉnh sửa thông tin quyền</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="card-body table-border-style">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Tên danh mục: <span class="label-required"></span></label>
                        @Html.EditorFor(model => model.CateName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CateName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Mô tả: <span class="label-required"></span></label>
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Sắp xếp: <span class="label-required"></span></label>
                        @Html.EditorFor(model => model.OrderNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OrderNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Trạng thái: <span class="label-required"></span></label>
                        <select id="inputState" class="form-control" name="cboStatus">

                            <option value="0" selected>Không hoạt động</option>
                            <option value="1" selected>Đang hoạt động</option>
                            @*@if (lstRole != null)
                    {

                        foreach (var item in lstRole)
                        {
                            <option value="@item.RoleID">@item.Status</option>
                        }
                    }*@
                        </select>
                    </div>
                </div>


                <div class="col-lg-6">
                    <div class="form-group" style="margin-top: .5rem;">
                        <br />
                        <input type="submit" value="Ghi dữ liệu" class="btn btn-primary" />
                        <button class="btn btn-info">@Html.ActionLink("Quay lại", "Index")</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

