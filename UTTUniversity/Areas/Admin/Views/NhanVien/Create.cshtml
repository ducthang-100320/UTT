@model UTTUniversity.Models.tblAccountNhanVien

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}



@{
    var lstPhongBan = (List<UTTUniversity.Models.tblPhongBan>)Session["PhongBan"];
    var lstChucVu = (List<UTTUniversity.Models.tblChucVu>)Session["ChucVu"];
    var lstTrinhDo = (List<UTTUniversity.Models.tblTrinhDoHocVan>)Session["TrinhDo"];

}


@using (Html.BeginForm("Create", "NhanVien", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body table-border-style">
                    <div class="row">
                        <div class="col-lg-6">
                            <h4 class="card-title">Thêm mới thông tin người dùng</h4>
                        </div>
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.ErrorAccount != null)
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorAccount</div>
                    }
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="row p-t-0">
                                <div class="col-md-12 col-xs-12">
                                    <div class="form-group">
                                        <label>Ảnh:</label>

                                        <input type="file" name="filePost" id="input-file-now-custom-1" class="dropify" data-default-file="~/Areas/Admin/assets/node_modules/dropify/src/images/test-image-1.jpg" />
                                        @*@Html.LabelFor(model => model.ImageUrl, htmlAttributes: new { @class = "control-label col-md-2" })*@

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Tên người dùng: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.HO_TEN, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.HO_TEN, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Tên tài khoản: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.AccoutName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.AccoutName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Mật khẩu: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Mã Nhân Viên:</label>
                                        @Html.EditorFor(model => model.MA_NHANVIEN, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MA_NHANVIEN, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Ngày sinh: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.NGAY_SINH, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                        @Html.ValidationMessageFor(model => model.NGAY_SINH, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Giới tính: <span class="label-required">*</span></label>
                                        <div class="radio-list" style="padding-left:10px;">
                                            <label class="custom-control custom-radio">
                                                <input type="radio" id="customRadio1" name="customRadio" checked="checked" class="custom-control-input" value="1">
                                                <label class="custom-control-label" for="customRadio1">Nam</label>
                                            </label>
                                            <label class="custom-control custom-radio">
                                                <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input" value="0">
                                                <label class="custom-control-label" for="customRadio2">Nữ</label>
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Quê Quán:</label>
                                        @Html.EditorFor(model => model.QUE_QUAN, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.QUE_QUAN, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Số Điện Thoại:</label>
                                        @Html.EditorFor(model => model.SO_DIENTHOAI, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SO_DIENTHOAI, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Phòng Ban: <span class="label-required">*</span></label>
                                        <select id="inputState" class="form-control" name="cboPhongBan">
                                            <option value="-1" selected>---Chọn phong ban ---</option>
                                            @if (lstPhongBan != null)
                                            {

                                                foreach (var item in lstPhongBan)
                                                {
                                                    <option value="@item.MA_PHONGBAN">@item.TEN_PHONGBAN</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Chức Vụ: <span class="label-required">*</span></label>
                                        <select id="inputState" class="form-control" name="cboChucVu">
                                            <option value="-1" selected>---Chọn Chức Vụ ---</option>
                                            @if (lstChucVu != null)
                                            {

                                                foreach (var item in lstChucVu)
                                                {
                                                    <option value="@item.MA_CHUCVU">@item.TEN_CHUCVU</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Trình Độ Học Vấn: <span class="label-required">*</span></label>
                                        <select id="inputState" class="form-control" name="cboTrinhDo">
                                            <option value="-1" selected>---Chọn Trình Độ Học Vấn ---</option>
                                            @if (lstTrinhDo != null)
                                            {

                                                foreach (var item in lstTrinhDo)
                                                {
                                                    <option value="@item.MA_TRINHDO">@item.TEN_TRINHDO</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Ngày hiệu lực: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.DateIssued, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                        @Html.ValidationMessageFor(model => model.DateIssued, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Email: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Địa chỉ: <span class="label-required">*</span></label>
                                        @Html.EditorFor(model => model.DIA_CHI, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DIA_CHI, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Mô tả:</label>
                                        @if (Model != null)
                                        {
                                            <textarea class="form-control" name="validation-text"></textarea>
                                        }
                                        else
                                        {
                                            <textarea class="form-control" name="validation-text"></textarea>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="submit" value="Ghi dữ liệu" class="btn btn-primary btn-sm" />
                                    @Html.ActionLink("Quay lại", "Index")
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
}

<script src="~/Areas/Admin/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>
<script src="~/Areas/Admin/ckfinder/config.js"></script>
<script src="~/Areas/Admin/ckeditor/ckeditor.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        CKEDITOR.replace('txtFullDescribe');

    });
</script>
<script src="~/Areas/Admin/assets/node_modules/dropify/dist/js/dropify.min.js"></script>
<script>
    $(document).ready(function () {
        // Basic
        $('.dropify').dropify();

        // Translated
        $('.dropify-fr').dropify({
            messages: {
                default: 'Glissez-déposez un fichier ici ou cliquez',
                replace: 'Glissez-déposez un fichier ou cliquez pour remplacer',
                remove: 'Supprimer',
                error: 'Désolé, le fichier trop volumineux'
            }
        });

        // Used events
        var drEvent = $('#input-file-events').dropify();

        drEvent.on('dropify.beforeClear', function (event, element) {
            return confirm("Do you really want to delete \"" + element.file.name + "\" ?");
        });

        drEvent.on('dropify.afterClear', function (event, element) {
            alert('File deleted');
        });

        drEvent.on('dropify.errors', function (event, element) {
            console.log('Has Errors');
        });

        var drDestroy = $('#input-file-to-destroy').dropify();
        drDestroy = drDestroy.data('dropify')
        $('#toggleDropify').on('click', function (e) {
            e.preventDefault();
            if (drDestroy.isDropified()) {
                drDestroy.destroy();
            } else {
                drDestroy.init();
            }
        })
    });</script>
